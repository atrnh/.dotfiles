lctrl - h : yabai -m window --focus west
lctrl - j : yabai -m window --focus south
lctrl- k : yabai -m window --focus north
lctrl - l : yabai -m window --focus east

khd mode switcher prefix on
khd mode switcher timeout 0.5

lctrl - 0x29 : khd -e "mode activate switcher"
switcher - escape : khd -e "mode activate default"
window - escape : khd -e "mode activate default"
desktop - escape : khd -e "mode activate default"

switcher - s : khd -e "mode activate window"
switcher - d : khd -e "mode activate desktop"

switcher - t : yabai -m window --focus next
switcher + shift - t : yabai -m window --focus prev

window - h : yabai -m window --swap west; khd -e "mode activate default"
window - j : yabai -m window --swap south; khd -e "mode activate default"
window - k : yabai -m window --swap north; khd -e "mode activate default"
window - l : yabai -m window --swap east; khd -e "mode activate default"
window - a : yabai -m window --resize left:-20:0; khd -e "mode activate default"
window - s : yabai -m window --resize bottom:0:20; khd -e "mode activate default"
window - w : yabai -m window --resize top:0:-20; khd -e "mode activate default"
window - d : yabai -m window --resize right:20:0; khd -e "mode activate default"
window + shift - a : yabai -m window --resize left:20:0; khd -e "mode activate default"
window + shift - s : yabai -m window --resize bottom:0:-20; khd -e "mode activate default"
window + shift - w : yabai -m window --resize top:0:20; khd -e "mode activate default"
window + shift - d : yabai -m window --resize right:-20:0; khd -e "mode activate default"
window - t : yabai -m window --toggle float;\
             yabai -m window --grid 4:4:1:1:2:2; khd -e "mode activate default"

desktop - r : yabai -m space --rotate 90; khd -e "mode activate default"
desktop - b : yabai -m space --layout bsp; khd -e "mode activate default"
desktop - m : yabai -m space --layout monocle; khd -e "mode activate default"
desktop - f : yabai -m space --layout float; khd -e "mode activate default"
